	 <script>
var Panel = new Object();

document.getElementById('calc_close').addEventListener('click',calc_close);

for (i=0; i<document.getElementsByClassName('material_item').length; i++){
	document.getElementsByClassName('material_item').item(i).onclick = selected;
}

for (i=0; i<document.getElementsByClassName('inp').length; i++){
	document.getElementsByClassName('inp').item(i).onkeypress = function (e) {
  		return !(/[А-Яа-яA-Za-z ]/.test(String.fromCharCode(e.charCode)))};	
}

document.getElementById('span2').addEventListener('click', clear);

function selected() {
	for (i=0; i<document.getElementsByClassName('material_item').length; i++){
		document.getElementsByClassName('material_item').item(i).classList.remove('material_hover');
	}
	this.classList.toggle("material_hover");
	Panel.type = this.id;
}
function check() {
	Panel.length = Number(document.getElementById('input_length').value);
	Panel.heigth = Number(document.getElementById('input_heigth').value);
	Panel.width = Number(document.getElementById('input_width').value);
	
	if ((Panel.length < 6000)&&(Panel.length > 0)&&(Panel.heigth < 6000)&&(Panel.heigth > 0)&&(Panel.width < 6000)&&(Panel.width >0)&&(Panel.type != undefined)){
		document.getElementById('wrong').style.display='none';
		calc();
	}
	else if ((Panel.length >= 6000)||(Panel.length == undefined)||(Panel.length <= 0)){document.getElementById('wrong').innerHTML = 'Введена неправильная ширина!'; document.getElementById('wrong').style.display='block';}
	else if ((Panel.heigth >= 6000)||(Panel.heigth == undefined)||(Panel.heigth <= 0)){document.getElementById('wrong').innerHTML = 'Введена неправильная высота!'; document.getElementById('wrong').style.display='block';}
	else if ((Panel.width >= 6000)||(Panel.width == undefined)||(Panel.width <= 0)){document.getElementById('wrong').innerHTML = 'Введена неправильная толщина!'; document.getElementById('wrong').style.display='block';}
	else if (Panel.type == undefined) {document.getElementById('wrong').innerHTML = 'Не выбран материал!'; document.getElementById('wrong').style.display='block';}
}

function calc(){
	Panel.volume = Number(Panel.length*Panel.heigth*Panel.width/1000000000);
	Panel.size = Panel.length+' х '+Panel.heigth+' х '+Panel.width;
	switch (Panel.type){
		case 'mdf': 
		console.log('mdf'); 
		Panel.weight = Number((Panel.volume*850).toFixed(2));
		Panel.name = 'МДФ';
		document.getElementById('div_img').style.backgroundImage ="url('http://siblam.ru/upload/medialibrary/dd6/ydee17vd3iq68bi0essgc3ghqt9cv8lj/mdf.png')";
		break;
		case 'dsp': 
		console.log('dsp');
		Panel.weight = Number((Panel.volume*750).toFixed(2));
		Panel.name = 'ДСП';
		document.getElementById('div_img').style.backgroundImage = "url('http://siblam.ru/upload/medialibrary/823/b68sm5ydtyzhi1i5z513ko7e88k90m60/dsp.png')";
		break;
		case 'glass': 
		console.log('glass');
		Panel.weight = Number((Panel.volume*2500).toFixed(2));
		Panel.name = 'стекла';
		document.getElementById('div_img').style.backgroundImage = "url('http://siblam.ru/upload/medialibrary/84e/5lv5n5kxzsofqkdt4q0hprasqw52rtxe/steklo.png')";
		break;
		case 'dub':
		console.log('dub');
		Panel.weight = Number((Panel.volume*680).toFixed(2));
		Panel.name = 'дуба';
		document.getElementById('div_img').style.backgroundImage = "url('http://siblam.ru/upload/medialibrary/871/4m8ab03tq4tew2pw0jlohb75d7t2os9a/dyb.png')";
		break;
		case 'sosna': 
		console.log('sosna');
		Panel.weight = Number((Panel.volume*550).toFixed(2));
		Panel.name = 'сосны';
		document.getElementById('div_img').style.backgroundImage = "url('http://siblam.ru/upload/medialibrary/8d5/41acihmxnjng5b1k564sn5hnn93tjgl0/sosna.png')";
		break;
		}
	document.getElementById('ans1').innerHTML = Panel.name;
	document.getElementById('ans2').innerHTML = Panel.size;
	document.getElementById('ans3').innerHTML = Panel.weight;
	document.getElementById('table_input').style.display = 'none';
	document.getElementById('div_submit').style.display = 'none';
	document.getElementById('div_result').style.display = "block";
}

function calc_close() {
	document.getElementById('div_result').style.display="none";
	document.getElementById('table_input').style.display = 'block';
	document.getElementById('div_submit').style.display = 'block';
}
function clear() {
	for (i=0; i<document.getElementsByTagName('input').length; i++){
		document.getElementsByTagName('input').item(i).value='';
	}
	for (var name in Panel) {
  		delete Panel[name] ;
	}
	for (i=0; i<document.getElementsByClassName('material_item').length; i++){
		document.getElementsByClassName('material_item').item(i).classList.remove('material_hover');
	}
}
</script>
</div>
